<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Payments

       <div class="pull-right">
        <%= link_to "Pay", new_payment_path, class: 'btn btn-primary' %>
      </div>
    </h1>
  </div>
<!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTable">
          <thead>
            <tr>
              <th>ID</th>
              <th>Value</th>
              <th>Comment</th>
              <th>Status</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% @payments.each do |payment| %>
            <tr class="odd gradeX">
              <td><%= payment.id %></td>
              <td><%= payment.mount %></td>
              <td><%= payment.comment %></td>
              <td><%= payment.status_label %></td>
              <td><%= payment.created_at %></td>
            </tr>
            <% end %>
           </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= paginate @payments, theme:"turbobil" %>
   </div>
</div>
