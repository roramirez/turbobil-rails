<%= simple_form_for(@account) do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row col-lg-10">

    <%= f.hidden_field :id %>
    <div class="form-group col-sm-8">
      <label>Code (Number exten)</label>
      <%= f.text_field :code, autofocus: true, class: 'form-control', as: 'string' %>
    </div>


    <div class="form-group col-sm-3">
      <label>Password</label>
      <%= f.text_field :password, autofocus: true, class: 'form-control input-sm' %>
    </div>

  </div>

  <div class="row col-sm-10">
    <div class="pull-right">
      <%= link_to "Back", accounts_path, class: "btn btn-default" %>
      <%= f.button :submit, class: "form-submit" %>
    <div>
  </div

<% end %>

