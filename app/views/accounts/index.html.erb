
<div class="row">
  <div class="col-lg-12">
     <h1 class="page-header">
       <%= I18n.t('views.pages.accounts') %>
       <div class="pull-right">
        <% if current_customer.is_maximum_exten %>
        <%= link_to "New account", new_account_path, class: 'btn btn-default' %>
        <% end %>
        </div>
     </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">

    <div class="panel panel-default">

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTable">
          <thead>

            <tr role="row">
              <th>Number</th>
              <th>Password</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody id="accounts">
            <% @accounts.each do |account| %>
            <tr data-id="<%= account.id %>" class="odd gradeX">
              <td><%= account.code %></td>
              <td><%= account.password %></td>
              <td>
                <%= link_to "Edit", edit_account_path(account) %>
              </td>
            </tr>
            <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= paginate @accounts, theme:"turbobil" %>
   </div>
</div>
<br>


